<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_login">

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize = "40px"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/categoryHintTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signOutButton"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Category"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryHintTextView"
        android:background="@drawable/custom_spinner_background"/>

    <EditText
        android:id="@+id/grievanceEditText"
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:hint="Enter Grievance in Details"
        android:layout_below="@id/categorySpinner"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity = "bottom"/>


    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/grievanceEditText"
        android:layout_centerHorizontal="true"
        android:textSize = "50px"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
