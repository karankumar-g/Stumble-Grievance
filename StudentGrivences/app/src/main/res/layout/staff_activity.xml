<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_login">

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize = "40px"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Hello, !"
        android:layout_below="@id/signOutButton"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@android:color/white"/>

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/greetingTextView"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_spinner_background" />

    <TextView
        android:id="@+id/grievancesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Grievances"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/categorySpinner"
        android:layout_marginTop="16dp"/>

    <ScrollView
        android:id="@+id/grievancesScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/grievancesTextView"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/grievancesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</RelativeLayout>
